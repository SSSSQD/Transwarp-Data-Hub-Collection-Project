<?xml version="1.0" ?>
<?xml-stylesheet type="test/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>zk_connect</name>
        <!-- 开启了kerberos用hostname，不要用ip -->
        <value>172.16.2.93:2181,172.16.2.94:2181,172.16.2.95:2181</value>
    </property>
    <property>
        <name>group_id</name>
        <value>group1</value>
    </property>
    <property>
        <name>topic</name>
        <value>kafka4</value>
    </property>
    <property>
        <name>thread_pool_size</name>
        <!-- 线程池大小 -->
        <value>4</value>
    </property>
    <property>
        <name>thread_num</name>
        <!-- 线程数量 -->
        <value>3</value>
    </property>
    <property>
        <name>open_kerberos</name>
        <!-- 是否开启kerberos -->
        <value>false</value>
    </property>
    <property>
        <name>kerberos_user</name>
        <!-- kerberos用户 -->
        <value>kafka</value>
    </property>
    <property>
        <name>keytab</name>
        <!-- kerberos用户kafka的keytab的绝对路径，注意一定要写\\而不是\ -->
        <value>E:\\kafka.keytab</value>
    </property>
</configuration>